{{#if isBrowsingServices}}

	<div class="head">
		<div class="burger dark" {{action "toggleBrowsingServices"}}>
			<i class="fa fa-bars"></i>
		</div>
		<div class="name">All Services</div>
	</div>		
	<div class="services">
		<li class="create-new-service" {{action "createNewService"}}>Create New <i class="fa fa-angle-right"></i></li>
		{{#each oneservice in services}}
			{{service-oos-list-service-li
				service=oneservice
				selectedService=service
				selectServiceAction="selectService"}}
		{{/each}}
	</div>

{{else}}

	<div class="head">
		{{#unless isRenamingService}}
			<div class="burger dark" {{action "toggleBrowsingServices"}}>
				<i class="fa fa-bars"></i>
			</div>
			<div class="name name-service" {{action "startRenamingService"}}>{{service.name}}</div>
		{{else}}
			<div class="rename-save" {{action "doneRenamingService"}}>Save <i class="fa fa-angle-right"></i></div>
			<div class="input-name-container">{{input type="text" value=service.name classBinding=":input-name"}}</div>
		{{/unless}}
	</div>		
	<div class="items">
		{{#each item in service.items}}
			{{service-oos-item item=item selectAction="selectItem" selectedItem=selectedItem}}
		{{/each}}
	</div>

{{/if}}
